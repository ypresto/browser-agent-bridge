{
  "name": "@browser-agent-bridge/extension-chrome",
  "version": "0.0.1",
  "description": "Chrome extension for browser automation",
  "type": "module",
  "scripts": {
    "build": "node build.mjs",
    "test": "vitest run",
    "test:extension": "node test-extension.mjs",
    "test:playwright": "playwright test",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@browser-agent-bridge/dom-core": "workspace:*",
    "@browser-agent-bridge/extensions-core": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/chrome": "^0.0.280",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.0.0",
    "esbuild": "^0.25.11",
    "jsdom": "^27.0.1",
    "playwright": "^1.49.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
